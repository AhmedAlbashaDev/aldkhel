<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="اتمام الطلب"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"/>

    </FrameLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:background="#efefef"
        android:padding="8dp"
        android:textStyle="bold"
        android:text="عنوان الدفع"/>

    <TextView
        android:id="@+id/tvPaymentAddress"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:gravity="right"
        android:text="Flat Shipping Rate - S.R 5"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:background="#efefef"
        android:padding="8dp"
        android:textStyle="bold"
        android:text="عنوان الشحن"/>

    <TextView
        android:id="@+id/tvShippingAddress"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:gravity="right"
        android:text="Flat Shipping Rate - S.R 5"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:background="#efefef"
        android:padding="8dp"
        android:textStyle="bold"
        android:text="طريقة الشحن أو الاستلام"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:gravity="right"
        android:text="Flat Shipping Rate - S.R 5"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:background="#efefef"
        android:padding="8dp"
        android:textStyle="bold"
        android:text="طريقة الدفع"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:gravity="right"
        android:text="الدفع عند التسليم"/>


    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:background="#efefef"
        android:padding="8dp"
        android:textStyle="bold"
        android:text="كتابة ملاحظة حول الطلب"/>

    <EditText
        android:padding="2dp"
        android:layout_marginTop="5dp"
        android:id="@+id/etNote"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="اكتب الملاحظة هنا"
        android:background="#efefef"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cbAgree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvAgree"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="لقد قرات ووافقت علي سياسية الاستبدال والاسترجاع"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"/>

    </LinearLayout>

    <Button
        android:layout_marginTop="15dp"
        android:id="@+id/bSubmit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/button_style"
        android:textColor="@android:color/white"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="تنفيذ الطلب"/>

</LinearLayout>